{
  "languageserver": {
    "nixd": {
      "command": "nixd",
      "filetypes": ["nix"],
      "nixpkgs": {
        "expr": "import <nixpkgs> {}"      
      },
      "options": {
        "nixos": {
          "expr": "(builtins.getFlake \"/home/ian/nixos-config\").nixosConfigurations.nixos.options"
        }
      }
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "python.pythonPath": "python3",
  "pyright.enable": true
}
